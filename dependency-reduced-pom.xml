<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>brutusin</artifactId>
    <groupId>org.brutusin</groupId>
    <version>1.0.1</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.brutusin</groupId>
  <artifactId>K2-JavaAgent</artifactId>
  <name>K2-JavaAgent</name>
  <version>1.0.0</version>
  <description>A configurable java agent to log programs running on the JVM</description>
  <url>https://github.com/brutusin/logging-instrumentation</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/brutusin/logging-instrumentation/issues</url>
  </issueManagement>
  <ciManagement>
    <system>travis-ci</system>
    <url>https://travis-ci.org/brutusin/logging-instrumentation</url>
  </ciManagement>
  <scm>
    <connection>scm:git:https://github.com/brutusin/logging-instrumentation.git</connection>
    <developerConnection>scm:git:https://github.com/brutusin/logging-instrumentation.git</developerConnection>
    <url>https://github.com/brutusin/logging-instrumentation</url>
  </scm>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Premain-Class>k2.org.brutusin.instrumentation.Agent</Premain-Class>
              <Can-Retransform-Classes>true</Can-Retransform-Classes>
              <Can-Redefine-Classes>true</Can-Redefine-Classes>
              <Boot-Class-Path>${project.artifactId}-${project.version}.${project.packaging}</Boot-Class-Path>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.brutusin</pattern>
                  <shadedPattern>k2.org.brutusin</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objectweb</pattern>
                  <shadedPattern>k2.org.objectweb</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.json</pattern>
                  <shadedPattern>k2.org.json</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.fasterxml</pattern>
                  <shadedPattern>k2.com.fasterxml</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.k2</pattern>
                  <shadedPattern>k2.com.k2</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>1.7</maven.compiler.target>
    <buildTime>2019-02-05_07:08:07UTC</buildTime>
    <maven.compiler.source>1.7</maven.compiler.source>
    <buildId>201902050702_UTC_0c876e5</buildId>
    <commitId>0c876e5</commitId>
  </properties>
</project>
