<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.brutusin</groupId>
		<artifactId>brutusin</artifactId>
		<version>1.0.1</version>
	</parent>
	<groupId>org.brutusin</groupId>
	<artifactId>K2-JavaAgent</artifactId>
	<version>1.0.0</version>
	<name>K2-JavaAgent</name>
	<description>A configurable java agent to log programs running on the JVM</description>
	<url>https://github.com/brutusin/logging-instrumentation</url>

	<properties>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<buildId>201902050702_UTC_0c876e5</buildId>
		<buildTime>2019-02-05_07:08:07UTC</buildTime>
		<commitId>0c876e5</commitId>
	</properties>

	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/brutusin/logging-instrumentation/issues</url>
	</issueManagement>

	<ciManagement>
		<system>travis-ci</system>
		<url>https://travis-ci.org/brutusin/logging-instrumentation</url>
	</ciManagement>

	<scm>
		<url>https://github.com/brutusin/logging-instrumentation</url>
		<connection>scm:git:https://github.com/brutusin/logging-instrumentation.git</connection>
		<developerConnection>scm:git:https://github.com/brutusin/logging-instrumentation.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<dependencies>
		<!-- https://mvnrepository.com/artifact/com.googlecode.json-simple/json-simple -->
		<dependency>
			<groupId>com.googlecode.json-simple</groupId>
			<artifactId>json-simple</artifactId>
			<version>1.1.1</version>
		</dependency>


		<!-- https://mvnrepository.com/artifact/com.fasterxml.jackson.core/jackson-databind -->
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.9.8</version>
		</dependency>
		<dependency>
			<groupId>org.brutusin</groupId>
			<artifactId>instrumentation</artifactId>
			<version>1.0.1.0</version>
		</dependency>
		<!-- Logging -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.8.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-jcl</artifactId>
			<version>2.1</version>
		</dependency>

	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>log4j-provider.properties</include>
                </includes>
                <targetPath>META-INF</targetPath>
            </resource>
		</resources>

		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Premain-Class>k2.io.org.brutusin.instrumentation.Agent</Premain-Class>
							<Can-Retransform-Classes>true</Can-Retransform-Classes>
							<Can-Redefine-Classes>true</Can-Redefine-Classes>
							<Boot-Class-Path>${project.artifactId}-${project.version}-jar-with-dependencies.${project.packaging}</Boot-Class-Path>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>

						<configuration>
						<filters>
			                <filter>
			                    <artifact>*:*</artifact>
			                    <excludes>
			                        <exclude>**/Log4j2Plugins.dat</exclude>
			                    </excludes>
			                </filter>
			            </filters>
							<transformers>
                				<transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
							</transformers>
							<finalName>${project.artifactId}-${project.version}-jar-with-dependencies</finalName>
							<relocations>
								<relocation>
									<pattern>org.brutusin</pattern>
									<shadedPattern>k2.io.org.brutusin</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.objectweb</pattern>
									<shadedPattern>k2.io.org.objectweb</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.json</pattern>
									<shadedPattern>k2.io.org.json</shadedPattern>
								</relocation>
								<relocation>
									<pattern>com.fasterxml</pattern>
									<shadedPattern>k2.io.com.fasterxml</shadedPattern>
								</relocation>
								<relocation>
									<pattern>com.k2.</pattern>
									<shadedPattern>k2.io.com.k2.</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.apache.commons.logging</pattern>
									<shadedPattern>k2.io.org.apache.commons.logging</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.apache.logging.log4j</pattern>
									<shadedPattern>k2.io.org.apache.logging.log4j</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.apache.logging.slf4j</pattern>
									<shadedPattern>k2.io.org.apache.logging.slf4j</shadedPattern>
								</relocation>
							</relocations>
						</configuration>

					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


</project>
